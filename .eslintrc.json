{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "context": true,
        "describe": true,
        "it": true,
        "cy": true,
        "beforeEach": true,
        "before": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-hooks"
    ],
    "rules": {
        "max-len": "off",
        "react/prop-types": "off",
        "global-require": "off",
        "react/jsx-uses-react": "off",
        "react/react-in-jsx-scope": "off",
        "object-curly-newline": [
            "error",
            {
                "consistent": true
            }
        ]
    }
}
